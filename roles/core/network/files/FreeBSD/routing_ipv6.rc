ipv6_route_gw="{{ ipv6_gateway }} -iface {{ interface }}"
ipv6_route_default="default {{ ipv6_gateway }}"
{%- else -%}
ipv6_defaultrouter="{{ ipv6_gateway }}"
{% endif -%}
