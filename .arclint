{
    "linters": {
        "chmod": {
            "type": "chmod"
        },
        "shell": {
            "type": "shellcheck",
            "include": [
                "(\\.sh$)"
            ]
        },
        "filename": {
            "type": "filename"
        },
        "json": {
            "type": "json",
            "include": [
                "(^\\.arcconfig$)",
                "(^\\.arclint$)",
                "(\\.json$)"
            ]
        },
        "python": {
            "type": "flake8",
            "severity": {
                "E203": "disabled",
                "E731": "disabled",
                "F821": "advice"
            },
            "flake8.builtins": [
                "__context__",
                "__executors__",
                "__ext_pillar__",
                "__grains__",
                "__opts__",
                "__pillar__",
                "__proxy__",
                "__ret__",
                "__runner__",
                "__runners__",
                "__salt__",
                "__sdb__",
                "__serializers__",
                "__states__",
                "__thorium__",
                "__utils__"
            ],
            "include": [
                "(\\.py$)",
                "(^roles/viperserv/eggdrop/cron.sls$)",
                "(^roles/webserver-legacy/php-builder/source.sls$)",
                "(^roles/webserver-legacy/php-sites/cleanup.sls$)"
            ]
        }
    }
}
